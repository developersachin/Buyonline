<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_medium_10dp"
    android:background="@drawable/rounded_corner_white"
    android:paddingBottom="@dimen/padding_small_5"
    android:paddingLeft="@dimen/padding_medium_10dp"
    android:paddingRight="@dimen/padding_medium_10dp"
    android:paddingTop="@dimen/padding_small_5">

    <TextView
        android:id="@+id/order_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:text="@string/orderid"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order_id_txt"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:layout_toEndOf="@id/order_id_txt"
        android:layout_toRightOf="@id/order_id_txt"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/order_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/order_id_txt"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:text="@string/pricetag"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order_price_txt"
        android:layout_below="@id/order_id"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:layout_toRightOf="@id/order_price_txt"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_light" />

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order_id_txt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:layout_marginTop="@dimen/padding_small_5"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/order_viewdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order_price"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:background="@drawable/ripple_withoutpadding_transparentbg"
        android:text="@string/view_details"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/order_address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/order_price_txt"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:text="@string/address"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/order_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order_address_txt"
        android:layout_below="@id/order_price"
        android:layout_marginBottom="@dimen/padding_small_5"
        android:layout_toEndOf="@id/order_address_txt"
        android:layout_toRightOf="@id/order_address_txt"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_light" />

</RelativeLayout>